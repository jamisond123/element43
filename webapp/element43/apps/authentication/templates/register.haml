- extends "base_auth.haml"
- load custom_filters
- block title
  = block.super
  Sign Up
- block heading
  %h3.panel-title Get Started Now
- block body
  - if form.non_field_errors
    .alert.alert-danger
      %i.glyphicon.glyphicon-warning-sign
      = form.non_field_errors
  %form{'action':'{% url \'registration\' %}', 'method':'post'}
    - csrf_token
    %fieldset
      %div{'class':'form-group{{form.username|css_error}}'}
        = form.username
        - if form.username.errors
          %span.help-block
            - for error in form.username.errors
              = error|escape
      %div{'class':'form-group{{form.email|css_error}}'}l
        = form.email
        - if form.email.errors
          %span.help-block
            - for error in form.email.errors
              = error|escape
      %div{'class':'form-group{{form.password|css_error}}'}
        = form.password
        - if form.password.errors
          %span.help-block
            - for error in form.password.errors
              = error|escape
      %div{'class':'form-group{{form.password_repeat|css_error}}'}
        = form.password_repeat
        - if form.password_repeat.errors
          %span.help-block
            - for error in form.password_repeat.errors
              = error|escape
    %button.btn.btn-lg.btn-success.btn-block{'type':'submit'} Sign Up
