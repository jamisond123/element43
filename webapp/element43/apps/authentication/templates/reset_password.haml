- extends "base_auth.haml"
- load custom_filters
- block title
  = block.super
  Reset Password
- block heading
  %h3.panel-title Reset Your Password
- block body
  - if form.non_field_errors
    .alert.alert-danger
      %i.glyphicon.glyphicon-warning-sign
      = form.non_field_errors
  %form{'action':'{% url \'reset_password\' %}', 'method':'post'}
    - csrf_token
    %fieldset
      %div{'class':'form-group{{form.username|css_error}}'}
        = form.username
        - if form.username.errors
          %span.help-block
            - for error in form.username.errors
              = error|escape
      %div{'class':'form-group{{form.email|css_error}}'}
        = form.email
        - if form.email.errors
          %span.help-block
            - for error in form.email.errors
              = error|escape
      %button.btn.btn-lg.btn-warning.btn-block{'type':'submit'} Reset Password